<%= form_for [@product, @comment] do |f| %>
  <p>
    <%= f.label :author_id %>
    <%= f.number_field :author_id %>
  </p>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </p>
  <p>
      <%= f.submit %>
  </p>
<% end %>
