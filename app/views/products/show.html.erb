<div class="productContainer">
<%= render 'layouts/nav' %>
<div class="productShow">
  <h2><%= @product.brand %> - <%= @product.name %></h2>
<p id="notice"><%= notice %></p>
<%= image_tag(@product.image) %>
<div class="productInfo">
<p>
  <strong>Type name:</strong>
  <%= @product.type_name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>
<p><%= render partial: 'comments/form' %></p>
<h3>Comments(<%= @product.comments.size %>)</h3>
<%= render partial: 'products/comment', collection: @product.comments.reverse %>

</div>
<a href="https://www.google.com/search?q=<%=@product.brand%>%20<%=@product.name%>&source=lnms&tbm=shop" target="_blank">Buy</a> |
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

</div>
</div>
