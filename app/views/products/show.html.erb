<div class="productContainer">
<%= render 'layouts/nav' %>
<div class="productShow">
  <h2><%= @product.brand %> - <%= @product.name %>  <%if current_user && admin? %><%= link_to 'Edit', edit_product_path(@product) %>  <%end%></h2>
<p id="notice"><%= notice %></p>
<%= image_tag(@product.image) %>
<div class="productInfo">
<p>
  <strong>Type:</strong>
  <%= @product.type_name %>
</p>
<p>
  <strong>Alcochol by volume:</strong>
  <%= @product.abv %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>
<p>
  <strong>More Info:</strong>
  <%= @product.more_info %>
</p>
<button type="button" name="button" class="btn-primary"><a href="https://www.google.com/search?q=<%=@product.brand%>%20<%=@product.name%>&source=lnms&tbm=shop" target="_blank">Buy on Google</a></button>
</div>
<hr class="break">
<%if current_user %>
<div class="commentForm"><h3>leave a review</h3><%= render partial: 'comments/form' %></div>
<%else%>
<p>Sign up to leave a review</p>
<%end%>
<div class="commentContent">
  <h3>Reviews(<%= @product.comments.size %>)</h3>
  <%= render partial: 'products/comment', collection: @product.comments.reverse %>
</div>


</div>
</div>
