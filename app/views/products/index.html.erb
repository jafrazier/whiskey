<%= render 'layouts/nav' %>
<%if current_user && admin? %>
<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
    <% @products.reverse.each do |x| %>
    <div class="col-lg-3 col-md-6 col-sm-12 sub-item1 item">
      <div class="highlight">
        <%= image_tag(x.image) %>
        <div class="info">
          <h5><%= x.brand %> - <%= x.name %></h5>
          <p><%= x.description%></p>
          <%= link_to 'Show', x %>
          <%= link_to 'Destroy', x, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
    <% end %>

  </div>
    </div>
<%= link_to 'New Product', new_product_path %>
<% else %>
<p>User not autherized</p>
<% end %>
